{
  "extends": "@repo/eslint-config/package-scripts.json",
  "name": "@repo/pocket-ic-core",
  "version": "0.1.0",
  "main": "./src/index.ts",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "dev-start": "nodemon --config nodemon.json -r tsconfig-paths/register ./src/index.ts -p 8092",
    "turbo-install": "pnpm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@dfinity/agent": "2.3.0",
    "@dfinity/candid": "2.3.0",
    "@dfinity/ic-management": "6.1.0",
    "@dfinity/identity": "2.4.1",
    "@dfinity/principal": "2.3.0",
    "@repo/pic": "workspace:^",
    "express": "5.1.0",
    "figlet": "1.8.1",
    "multer": "2.0.2",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "1.12.4",
    "@types/express": "5.0.3",
    "@types/figlet": "1.7.0",
    "@types/multer": "2.0.0",
    "@types/node": "22.13.10",
    "@types/yargs": "17.0.33",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "chalk": "4.1.2",
    "eslint": "9.24.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": "@repo/prettier-config"
}
